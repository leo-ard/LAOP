                           </HBox.margin>
                        </JFXButton>
                        <Label fx:id="currentPageLbl" alignment="CENTER" prefHeight="86.0" prefWidth="49.0" text="1" />
                        <JFXButton fx:id="nextPageBtn" styleClass="btn" text="Next page">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </JFXButton>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
